{
  "name": "vue-todo-app",
  
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "type": "npm run type-check:web && npm run type-check:api",
    "type-check:web": "vue-tsc --noEmit",
    "type-check:api": "tsc -p apps/api --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build-only": "vite build",
     "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --fix",
    "api": "npm run dev -w apps/api",
    "api:build": "npm run build -w apps/api"
  },
  "dependencies": {
    "mongodb": "^6.20.0",
    "pinia": "^3.0.3",
    "pinia-plugin-persistedstate": "^4.5.0",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1"
    
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.18.8",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.31.0",
    "eslint-plugin-vue": "~10.3.0",
    "jiti": "^2.4.2",
    "jsdom": "^27.0.0",
    "npm-run-all": "^4.1.5",
    "npm-run-all2": "^8.0.4",
    "typescript": "~5.8.0",
    "vite": "^7.1.9",
    "vite-bundle-visualizer": "^1.2.1",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.1.1"
  }
}
