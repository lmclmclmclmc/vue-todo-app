    "lib": ["ES2020", "DOM"],
    "jsx": "preserve",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,           // â† é‡ç‚¹
    "noImplicitAny": true,    // â† é‡ç‚¹
    "skipLibCheck": true,
    
    
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "vitest.config.ts", "vitest.config.ts"]
}
