{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
     "baseUrl": ".",
      "types": ["vite/client", "node"], // ğŸ‘ˆ å¼ºåˆ¶å¼•å…¥
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "ES2020",
